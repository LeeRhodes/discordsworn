{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "script"
    },
    "rules": {
        "curly": [
            "error", "multi-line"
        ],
        "indent": ["error", 4, { "SwitchCase": 0 }],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": ["off"],
        "no-warning-comments": [
            "warn", { "terms": ["todo"] }
        ],
        "no-unused-vars": [
            "warn", { "argsIgnorePattern": "^_" }
        ],
        "comma-dangle": ["warn"],
        "prefer-const": ["error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }]
    }
}